<% content_for :page_title do %>
  <%= Spree.t(:analytics) %>
<% end %>

<%= render 'spree/admin/shared/analytics_vue_mount' do %>
  <gapi-auth
    ga-token="<%= @ga_token %>"
    ga-view-id="<%= @ga_view_id %>"
    v-slot="{ gapi, authorized, gaViewId }">
    <reports-with-date v-slot="{ startDate, endDate }">
      <totals-report :gapi="gapi"
                     :authorized="authorized"
                     :ga-view-id="gaViewId"
                     :start-date="startDate"
                     :end-date="endDate">
      </totals-report>
    </reports-with-date>
  </gapi-auth>
<% end %>

<%= render 'spree/admin/analytics/reports_list' %>
